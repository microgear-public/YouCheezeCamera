<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/table_border">

        <TableRow
            android:id="@+id/menuMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:background="@color/table_background"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                app:srcCompat="@drawable/ic_baseline_videocam_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="撮影"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textProcmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="10sp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/menuGps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:background="@color/table_background"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_gps_not_fixed_24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS記録"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/menuFolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:background="@color/table_background"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_folder_open_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存先"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:id="@+id/menuSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:background="@color/table_background"
            android:padding="10sp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_settings_24" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="設定"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/table_background"
            android:gravity="center"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnToSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:shadowColor="#00FFFFFF"
                android:text="YouCheezeサイトへ\n(ゆーちーず)"
                android:textAllCaps="false"
                android:textColor="@color/site_link_text"
                android:textSize="12sp"
                app:strokeColor="@color/site_link_border"
                app:strokeWidth="1dp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="YouCheeze V1.0   ©MicroGear.corp" />

        <TextView
            android:id="@+id/txtLicenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/site_link_text"
            app:strokeColor="@color/site_link_border" />
    </LinearLayout>

</LinearLayout>